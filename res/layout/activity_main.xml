<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.example.popupwindow.test.MainActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="详解PopupWindow"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_showPWLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:padding="10dp"
            android:text="固定PopupWindow出现时的位置"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/btn_custom_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#222222"
            android:padding="10dp"
            android:text="自定义PopupWindow(带动画效果显示)"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>